{
    "semi": true,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "es5",
    "plugins": [
        "@trivago/prettier-plugin-sort-imports",
        "prettier-plugin-tailwindcss"
    ],
    "importOrder": [
        "^(next?/?([a-zA-Z/]*))$",
        "^(react?/?([a-zA-Z/]*))$",
        "<THIRD_PARTY_MODULES>",
        "^@/components/ui/(.*)$",
        "^@/components/(.*)$",
        "^@/lib/(.*)$",
        "^@/(.*)$",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSpecifiers": true
}
