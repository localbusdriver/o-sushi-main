      }

      .navbar a {
        float: left;
        display: block;
        color: white;
        text-align: center;
        padding: 14px ;
        text-decoration: none;
        transition: background-color 0.3s;
      }

      .navbar a:hover {
        color: black;
      }

      .footer {
        overflow: hidden;
        height: 20vh;
        background-color: grey;
        display: flex;
        flex-direction: column;
        padding: 10px 50px;
        text-align: center;
        text-decoration: none;
        color: white;
      }
      .footer a {
        padding: 5px;
        color: white;
        text-decoration: none;
      }
      .footer p{
        margin-top: 20px;
      }
    </style>
  </head>
